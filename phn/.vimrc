" Enable syntax highlighting
syntax on

" Remove word wrap
set nowrap

" Enable filetype detection and plugins
filetype plugin indent on

" Custom Rename command
command! -nargs=1 Rename saveas <args> | call delete(expand('#'))

" Global defaults
set tabstop=4
set shiftwidth=4
set softtabstop=4
set expandtab
set autoindent
set smartindent

filetype plugin indent on

